@page
@model NudeSolutions.Pages.InsuranceItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>InsuranceItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InsuranceItem.InsuranceCategoryID" class="control-label">Category</label>
                <select asp-for="InsuranceItem.InsuranceCategoryID" class="form-control">
                    <option value="1">Clothing</option>
                    <option value="2">Electronics</option>                    
                    <option value="3">Kitchen</option>
                    <option value="4">Miscellaneous</option>
                </select>
                <span asp-validation-for="InsuranceItem.InsuranceCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceItem.Name" class="control-label"></label>
                <input asp-for="InsuranceItem.Name" class="form-control" />
                <span asp-validation-for="InsuranceItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceItem.Amount" class="control-label"></label>
                <input asp-for="InsuranceItem.Amount" class="form-control" />
                <span asp-validation-for="InsuranceItem.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
